<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.iciban.fragment.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_selectFragment"
            app:destination="@id/selectFragment" />
        <action
            android:id="@+id/action_homeFragment_to_login"
            app:destination="@id/login"
            app:popUpTo="@id/homeFragment" />
    </fragment>

    <fragment
        android:id="@+id/selectFragment"
        android:name="com.example.iciban.fragment.selectbanner.SelectbannerFragment"
        android:label="fragment_select"
        tools:layout="@layout/fragment_select">
        <action
            android:id="@+id/action_selectFragment_to_itemsListFragment"
            app:destination="@id/itemsListFragment" />
    </fragment>

    <fragment
        android:id="@+id/gachaFragment"
        android:name="com.example.iciban.fragment.GachaFragment"
        android:label="fragment_gacha"
        tools:layout="@layout/fragment_gacha">
    </fragment>
    <fragment
        android:id="@+id/login"
        android:name="com.example.iciban.fragment.prelogin.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_login_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_login_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.iciban.fragment.prelogin.register.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_registerFragment_to_login"
            app:destination="@id/login" />
        <action
            android:id="@+id/action_registerFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/itemsListFragment"
        android:name="com.example.iciban.fragment.items.ItemsListFragment"
        android:label="fragment_items_list"
        tools:layout="@layout/fragment_items_list">
        <action
            android:id="@+id/action_itemsListFragment_to_itemDetailFragment"
            app:destination="@id/itemDetailFragment" />
        <action
            android:id="@+id/action_itemsListFragment_to_gachaFragment"
            app:destination="@id/gachaFragment" />
    </fragment>
    <fragment
        android:id="@+id/itemDetailFragment"
        android:name="com.example.iciban.fragment.items.ItemDetailFragment"
        android:label="fragment_item_detail"
        tools:layout="@layout/fragment_item_detail" >
        <action
            android:id="@+id/action_itemDetailFragment_to_gachaFragment"
            app:destination="@id/gachaFragment" />
    </fragment>
</navigation>