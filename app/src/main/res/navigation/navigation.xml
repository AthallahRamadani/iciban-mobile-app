<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/login">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.iciban.fragment.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_selectFragment"
            app:destination="@id/selectFragment" />
    </fragment>

    <fragment
        android:id="@+id/selectFragment"
        android:name="com.example.iciban.fragment.SelectFragment"
        android:label="fragment_select"
        tools:layout="@layout/fragment_select">
        <action
            android:id="@+id/action_selectFragment_to_gachaFragment"
            app:destination="@id/gachaFragment" />
    </fragment>

    <fragment
        android:id="@+id/gachaFragment"
        android:name="com.example.iciban.fragment.GachaFragment"
        android:label="fragment_gacha"
        tools:layout="@layout/fragment_gacha" >
        <argument
            android:name="selectedImage"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/login"
        android:name="com.example.iciban.fragment.login"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_login_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
</navigation>